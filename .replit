run = "npm start"
modules = ["nodejs-20"]

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[nix]
packages = ["lsof", "psmisc"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Website Server"

[[workflows.workflow]]
name = "Website Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server public -p 5000 --cors"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
